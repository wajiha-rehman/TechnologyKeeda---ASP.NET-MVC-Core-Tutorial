@model GettingStarted.Models.Student

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Enrolled)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Enrolled)
        </dd>
    </dl>
</div>
<div>
    Courses:
    @foreach ( var course in Model.Enrollment) { 
        <span>
            @course.Course.Title
        </span>
        <br />
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.StudentId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
